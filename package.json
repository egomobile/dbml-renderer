{
  "name": "@egomobile/dbml-renderer",
  "version": "2.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egomobile/dbml-renderer.git"
  },
  "main": "lib/api.js",
  "types": "lib/api.d.ts",
  "files": [
    "lib",
    "!lib/**/__tests__/**/*",
    "!lib/**/*.map",
    "!lib/**/setupTests.*",
    "README.md"
  ],
  "scripts": {
    "build": "del ./lib && tsc",
    "docs:generate": "del ./docs && typedoc --out ./docs ./src",
    "format": "prettier --write src/ package.json",
    "format:check": "prettier --check src/ package.json",
    "generate:parser": "peggy src/dbml.pegjs --format=commonjs",
    "sandbox": "nodemon --watch './sandbox.ts' --exec node -r ts-node/register --inspect=0.0.0.0:9229 ./sandbox.ts",
    "test": "exit 0",
    "test2": "ava"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@egomobile/tsconfig": "^5.0.0",
    "@types/node": "18.18.13",
    "ava": "5.3.1",
    "del-cli": "5.1.0",
    "nodemon": "3.0.1",
    "peggy": "3.0.2",
    "prettier": "3.1.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "ts-node": "10.9.1",
    "typedoc": "0.25.4",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@aduh95/viz.js": "3.7.0",
    "zod": "3.22.4"
  },
  "bugs": {
    "url": "https://github.com/egomobile/dbml-renderer/issues"
  },
  "homepage": "https://github.com/egomobile/dbml-renderer#readme",
  "description": "",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}